/**
 * Equipment Widget Styles
 * Simple search widget with enhanced detail popup
 */

/* Allow dropdown to extend beyond widget boundaries */
.widget:has(.equipment-widget) {
  overflow: visible !important;
}

.widget-content:has(.equipment-widget) {
  overflow: visible !important;
}

.equipment-widget {
  display: flex;
  flex-direction: column;
  height: 100%;
  padding: 12px;
  box-sizing: border-box;
  pointer-events: auto;
  position: relative;
  overflow: visible;
}

/* Widget Title */
.equipment-title {
  font-size: 18px;
  font-weight: 600;
  color: #111827;
  margin-bottom: 12px;
  text-align: center;
}

/* Search Box */
.equipment-search {
  position: relative;
  margin-bottom: 12px;
  pointer-events: auto;
  z-index: 10;
}

.equipment-search-icon {
  position: absolute;
  left: 12px;
  top: 50%;
  transform: translateY(-50%);
  font-size: 16px;
  color: #9ca3af;
  pointer-events: none;
  z-index: 1;
}

.equipment-search-input {
  width: 100%;
  padding: 8px 12px 8px 36px;
  border: 1px solid #e5e7eb;
  border-radius: 6px;
  font-size: 14px;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  outline: none;
  transition: border-color 0.2s;
  position: relative;
  z-index: 2;
  background: white;
  pointer-events: auto !important;
  cursor: text;
  user-select: text;
}

.equipment-search-input:focus {
  border-color: #3b82f6;
  box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
}

.equipment-search-input::placeholder {
  color: #9ca3af;
}

/* Results Container - Dropdown Style */
.equipment-results {
  position: absolute;
  top: 100%;
  left: 0;
  right: 0;
  max-height: 400px;
  overflow-y: auto;
  overflow-x: hidden;
  background: white;
  border-radius: 8px;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
  z-index: 1000;
  margin-top: 4px;
}

/* Custom scrollbar */
.equipment-results::-webkit-scrollbar {
  width: 6px;
}

.equipment-results::-webkit-scrollbar-track {
  background: transparent;
}

.equipment-results::-webkit-scrollbar-thumb {
  background: #d1d5db;
  border-radius: 3px;
}

.equipment-results::-webkit-scrollbar-thumb:hover {
  background: #9ca3af;
}

/* Equipment Item Row */
.equipment-item {
  display: grid;
  grid-template-columns: 1fr auto auto;
  gap: 12px;
  padding: 10px 12px;
  border-bottom: 1px solid #f3f4f6;
  cursor: pointer;
  transition: background-color 0.15s;
  font-size: 13px;
  align-items: center;
}

.equipment-item:hover {
  background-color: #f9fafb;
}

.equipment-item:active {
  background-color: #f3f4f6;
}

.equipment-item:last-child {
  border-bottom: none;
}

/* Equipment Name */
.equipment-name {
  font-weight: 500;
  color: #111827;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* Internal ID */
.equipment-internal-id {
  color: #6b7280;
  font-size: 12px;
  font-family: 'Monaco', 'Courier New', monospace;
  white-space: nowrap;
}

/* Asset ID */
.equipment-asset-id {
  color: #9ca3af;
  font-size: 11px;
  font-family: 'Monaco', 'Courier New', monospace;
  white-space: nowrap;
}

/* Empty State */
.equipment-empty-state {
  display: none;
}

/* No Results */
.equipment-no-results {
  padding: 20px;
  text-align: center;
  color: #9ca3af;
  font-size: 14px;
}

/* ============================================================ */
/* DETAIL CARD POPUP - Enhanced Design */
/* ============================================================ */

.equipment-detail-card {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 560px;
  max-width: 90vw;
  max-height: 90vh;
  background: white;
  border-radius: 16px;
  box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
  z-index: 10000;
  animation: equipmentCardFadeIn 0.2s ease-out;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

@keyframes equipmentCardFadeIn {
  from {
    opacity: 0;
    transform: translate(-50%, -48%);
  }
  to {
    opacity: 1;
    transform: translate(-50%, -50%);
  }
}

/* Close Button */
.equipment-close-btn {
  position: absolute;
  right: 16px;
  top: 16px;
  padding: 4px 10px;
  font-size: 22px;
  font-weight: 300;
  color: #9ca3af;
  border: none;
  border-radius: 4px;
  background: none;
  cursor: pointer;
  z-index: 10;
  transition: all 0.15s;
}

.equipment-close-btn:hover {
  color: #111827;
  background: #f3f4f6;
}

/* Detail Header */
.equipment-detail-header {
  padding: 24px 60px 24px 24px;
  flex-shrink: 0;
  text-align: center;
  background: #fafafa;
}

.equipment-detail-actions {
  display: flex;
  gap: 16px;
  justify-content: center;
  margin-bottom: 20px;
}

.equipment-detail-btn {
  padding: 8px 20px;
  border: 1px solid #111827;
  border-radius: 4px;
  background: white;
  font-size: 13px;
  font-weight: 400;
  color: #111827;
  cursor: pointer;
  transition: all 0.15s;
  white-space: nowrap;
}

.equipment-detail-btn:hover {
  background: #f5f5f5;
}

.equipment-detail-title {
  margin: 0 0 16px 0;
  font-size: 28px;
  font-weight: 400;
  color: #111827;
  font-family: serif;
}

.equipment-detail-status-row {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  margin-bottom: 20px;
}

.equipment-status-badge {
  display: inline-flex;
  align-items: center;
  gap: 4px;
  padding: 4px 12px;
  border-radius: 4px;
  font-size: 12px;
  font-weight: 400;
}

.status-commissioned {
  background: #d1fae5;
  color: #065f46;
}

.status-warning {
  background: #fed7aa;
  color: #92400e;
}

.status-success {
  background: #d1fae5;
  color: #065f46;
}

.equipment-status-divider {
  color: #9ca3af;
  font-size: 12px;
}

.equipment-status-date {
  font-size: 12px;
  color: #6b7280;
}

.equipment-detail-divider {
  height: 1px;
  background: #e5e7eb;
  margin: 0 -24px;
}

/* Detail Content */
.equipment-detail-content {
  flex: 1;
  padding: 24px;
  overflow-y: auto;
}

.equipment-detail-content::-webkit-scrollbar {
  width: 6px;
}

.equipment-detail-content::-webkit-scrollbar-track {
  background: transparent;
}

.equipment-detail-content::-webkit-scrollbar-thumb {
  background: #d1d5db;
  border-radius: 3px;
}

/* Model/Serial Fields */
.equipment-detail-fields {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16px;
  margin-bottom: 24px;
}

.equipment-detail-field-group {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.equipment-field-label {
  font-size: 13px;
  font-weight: 600;
  color: #374151;
}

.equipment-field-value-box {
  padding: 12px 16px;
  border: 1.5px solid #d1d5db;
  border-radius: 8px;
  background: white;
  font-size: 14px;
  color: #111827;
  font-family: 'Monaco', 'Courier New', monospace;
  word-break: break-all;
}

/* Info List (Location, Maintenance, etc.) */
.equipment-detail-info-list {
  display: flex;
  flex-direction: column;
  gap: 12px;
  margin-bottom: 20px;
}

.equipment-info-row {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 14px 16px;
  background: white;
  border: 1px solid #e5e7eb;
  border-radius: 8px;
  cursor: pointer;
  transition: all 0.15s;
}

.equipment-info-row:hover {
  background: #f9fafb;
  border-color: #d1d5db;
}

.equipment-info-icon {
  font-size: 20px;
  flex-shrink: 0;
  width: 24px;
  text-align: center;
}

.equipment-info-content {
  flex: 0 0 auto;
  min-width: 140px;
}

.equipment-info-label {
  font-size: 14px;
  font-weight: 500;
  color: #111827;
}

.equipment-info-status {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  min-width: 0;
}

.equipment-info-text {
  font-size: 12px;
  color: #6b7280;
  text-align: right;
}

.equipment-info-badge {
  display: inline-block;
  padding: 6px 12px;
  border-radius: 4px;
  font-size: 11px;
  font-weight: 400;
  white-space: nowrap;
}

.equipment-info-badge.status-warning {
  background: #fef3c7;
  color: #92400e;
}

.equipment-info-badge.status-success {
  background: #d1fae5;
  color: #065f46;
}

.equipment-info-chevron {
  padding: 4px 8px;
  border: none;
  background: none;
  font-size: 20px;
  color: #9ca3af;
  cursor: pointer;
  flex-shrink: 0;
  transition: color 0.15s;
  margin-left: 8px;
}

.equipment-info-chevron:hover {
  color: #6b7280;
}

/* Detail Footer */
.equipment-detail-footer {
  padding: 16px 0 0;
  border-top: 1px solid #f3f4f6;
  font-size: 11px;
  color: #9ca3af;
  text-align: center;
}

/* Responsive adjustments */
@media (max-width: 768px) {
  .equipment-detail-card {
    width: 90vw;
  }

  .equipment-detail-content {
    padding: 20px;
  }

  .equipment-detail-title {
    font-size: 18px;
  }

  .equipment-detail-fields {
    grid-template-columns: 1fr;
  }

  .equipment-detail-btn {
    padding: 5px 12px;
    font-size: 11px;
  }
}
